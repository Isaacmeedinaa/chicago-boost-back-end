{
  "name": "chicago-boost-back-end",
  "version": "1.0.0",
  "description": "Mobile app for Chicago Boost franchise.",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "Isaac Medina",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "bcrypt": "^5.0.1",
    "cloudinary": "^1.25.0",
    "concurrently": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "emailjs-com": "^2.6.4",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "if-env": "^1.0.4",
    "joi": "^17.4.0",
    "joi-objectid": "^3.0.1",
    "joi-password-complexity": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.11.18",
    "multer": "^1.4.2",
    "nodemon": "^2.0.7",
    "path": "^0.12.7",
    "randomatic": "^3.1.1",
    "twilio": "^3.57.0"
  }
}
